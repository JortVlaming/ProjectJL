{
  "name": "frontend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "dev": "tsc --watch",
    "copy-assets": "cp -r public/* dist/",
    "serve": "python3 -m http.server 8080 --directory dist",
    "start": "npm run build && npm run serve"
  }
}
